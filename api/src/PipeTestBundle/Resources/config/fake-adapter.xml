<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.adapter.fake.client" class="ContinuousPipe\Pipe\Tests\Adapter\Fake\FakeEnvironmentClient">
            <argument type="service" id="event_bus" />
        </service>
        <service id="pipe.adapter.fake.client_factory" class="ContinuousPipe\Pipe\Tests\Adapter\Fake\FakeClientFactory">
            <argument type="service" id="pipe.adapter.fake.client" />
        </service>
        <service id="pipe.adapter.fake" class="ContinuousPipe\Pipe\Tests\Adapter\Fake\FakeAdapter">
            <argument type="service" id="pipe.adapter.fake.client_factory" />

            <tag name="pipe.adapter" />
        </service>

        <service id="pipe.adapter.fake.handler_for_successful_deployment" class="ContinuousPipe\Pipe\Tests\Adapter\Fake\Handler\HandlerForSuccessfulDeployment">
            <argument type="service" id="event_bus" />

            <tag name="deployment_command_handler" handles="ContinuousPipe\Pipe\Command\PrepareEnvironmentCommand" />
            <tag name="deployment_command_handler" handles="ContinuousPipe\Pipe\Command\CreatePublicEndpointsCommand" />
            <tag name="deployment_command_handler" handles="ContinuousPipe\Pipe\Command\CreateComponentsCommand" />
        </service>
    </services>
</container>
