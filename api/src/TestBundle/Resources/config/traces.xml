<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.intercom.traceable_client"
                 class="ContinuousPipe\Authenticator\Tests\Intercom\TraceableIntercomClient"
                 decorates="app.intercom.client">
            <argument type="service" id="app.intercom.traceable_client.inner" />
        </service>
        <service id="app.intercom.hookable_client"
                 class="ContinuousPipe\Authenticator\Intercom\HookableIntercomClient"
                 decorates="app.intercom.client">
            <argument type="service" id="app.intercom.hookable_client.inner" />
        </service>

        <service id="app.billing.activity_tracker.traced"
                 class="ContinuousPipe\Billing\ActivityTracker\TracedActivityTracker"
                 decorates="app.billing.activity_tracker">
            <argument type="service" id="app.billing.activity_tracker.traced.inner" />
        </service>

        <service id="builder.billing.subscription_client.traced"
                 class="ContinuousPipe\Billing\Subscription\TracedSubscriptionClient"
                 decorates="builder.billing.subscription_client">
            <argument type="service" id="builder.billing.subscription_client.traced.inner" />
        </service>
    </services>
</container>
