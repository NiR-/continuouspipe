<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.adapter.kubernetes.in_memory.node_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\InMemoryNodeRepository" />
        <service id="pipe.adapter.kubernetes.in_memory.namespace_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\InMemoryNamespaceRepository" />
        <service id="pipe.adapter.kubernetes.in_memory.pod_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\InMemoryPodRepository" />
        <service id="pipe.adapter.kubernetes.in_memory.service_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\InMemoryServiceRepository" />
        <service id="pipe.adapter.kubernetes.in_memory.replication_controller_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\InMemoryReplicationControllerRepository" />

        <service id="pipe.adapter.kubernetes.traceable.namespace_repository" class="ContinuousPipe\Adapter\Kubernetes\Tests\Repository\Trace\TraceableNamespaceRepository">
            <argument type="service" id="pipe.adapter.kubernetes.in_memory.namespace_repository" />
        </service>

        <service id="pipe.adapter.kubernetes.namespace_client" class="ContinuousPipe\Adapter\Kubernetes\Tests\InjectedRepositoriesNamespaceClient">
            <argument type="service" id="pipe.adapter.kubernetes.in_memory.pod_repository" />
            <argument type="service" id="pipe.adapter.kubernetes.in_memory.service_repository" />
            <argument type="service" id="pipe.adapter.kubernetes.in_memory.replication_controller_repository" />
        </service>

        <service id="pipe.adapter.kubernetes.adapter" class="ContinuousPipe\Adapter\Kubernetes\Tests\InjectedRepositoriesAdapter">
            <argument type="service" id="pipe.adapter.kubernetes.in_memory.node_repository" />
            <argument type="service" id="pipe.adapter.kubernetes.traceable.namespace_repository" />
            <argument type="service" id="pipe.adapter.kubernetes.namespace_client" />
        </service>
        <service id="pipe.adapter.kubernetes.client" class="Kubernetes\Client\Client">
            <argument type="service" id="pipe.adapter.kubernetes.adapter" />
        </service>
        <service id="pipe.adapter.kubernetes.client_factory" class="ContinuousPipe\Adapter\Kubernetes\Tests\InjectedClientFactory">
            <argument type="service" id="pipe.adapter.kubernetes.client" />
        </service>
    </services>
</container>
