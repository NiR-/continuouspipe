<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.notifier.retry.waiter" class="Tolerance\Waiter\NullWaiter" />
        <service id="builder.null_notifier" class="ContinuousPipe\Builder\Notifier\NullNotifier" public="false" />
        <service id="builder.notifier.hookable" alias="builder.http_notifier" />
        <service id="builder.http_notifier" class="ContinuousPipe\Builder\Notifier\HookableNotifier">
            <argument type="service" id="builder.null_notifier" />

            <tag name="tolerance.operation_wrapper"
                 methods="notify"
                 runner="tolerance.operation_runners.notifier" />
        </service>
        <service id="builder.notifier.traceable"
                 class="ContinuousPipe\Builder\Notifier\TraceableNotifier"
                 decorates="builder.notifier">
            <argument type="service" id="builder.notifier.traceable.inner" />
        </service>

        <service id="builder.reporting.publisher.traced"
                 class="ContinuousPipe\Builder\Reporting\TracedPublisher"
                 decorates="builder.reporting.publisher">
            <argument type="service" id="builder.reporting.publisher.traced.inner" />
        </service>

        <service id="builder.time_resolver.predictable"
                 class="ContinuousPipe\Events\TimeResolver\PredictableTimeResolver"
                 decorates="builder.time_resolver">
            <argument type="service" id="builder.time_resolver.predictable.inner" />
        </service>

        <service id="builder.metrics.traced_publisher"
                 class="ContinuousPipe\Tolerance\Metrics\Publisher\TracedPublisher"
                 decorates="tolerance.metrics.publisher.statsd"
                 public="false">
            <argument type="service" id="builder.metrics.traced_publisher.inner" />
        </service>
    </services>
</container>
