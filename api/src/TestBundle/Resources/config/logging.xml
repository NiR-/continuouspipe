<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="log_stream.client.in_memory" class="LogStream\Tests\InMemoryLogClient">
            <argument type="service" id="log_stream.tree.log_normalizer" />
        </service>
        <service id="log_stream.client" alias="log_stream.client.in_memory" />

        <service id="log_stream.client.traceable"
                 class="LogStream\TraceableClient"
                 decorates="log_stream.client">
            <argument type="service" id="log_stream.client.traceable.inner" />
        </service>

        <service id="log_stream.display_logger_factory"
                 class="LogStream\Tests\Debug\DisplayLoggerFactory"
                 decorates="log_stream.logger_factory">
            <argument type="service" id="log_stream.display_logger_factory.inner" />
            <argument type="service" id="log_stream.tree.log_normalizer" />
        </service>

        <service id="builder.notifier.retry.waiter" class="Tolerance\Waiter\NullWaiter" />
        <service id="builder.http_notifier" class="ContinuousPipe\Builder\Notifier\NullNotifier" />
        <service id="builder.notifier.hookable"
                 class="ContinuousPipe\Builder\Notifier\HookableNotifier"
                 decorates="builder.http_notifier">
            <argument type="service" id="builder.notifier.hookable.inner" />
        </service>
        <service id="builder.notifier.traceable"
                 class="ContinuousPipe\Builder\Notifier\TraceableNotifier"
                 decorates="builder.notifier">
            <argument type="service" id="builder.notifier.traceable.inner" />
        </service>

        <service id="builder.reporting.publisher" class="ContinuousPipe\Builder\Reporting\NullPublisher" />
        <service id="builder.reporting.publisher.traced"
                 class="ContinuousPipe\Builder\Reporting\TracedPublisher"
                 decorates="builder.reporting.publisher">
            <argument type="service" id="builder.reporting.publisher.traced.inner" />
        </service>

        <service id="builder.time_resolver.predictable"
                 class="ContinuousPipe\Events\TimeResolver\PredictableTimeResolver"
                 decorates="builder.time_resolver">
            <argument type="service" id="builder.time_resolver.predictable.inner" />
        </service>
    </services>
</container>
