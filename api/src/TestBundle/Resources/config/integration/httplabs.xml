<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.httplabs.client.predictable" class="ContinuousPipe\HttpLabs\PredictableClient"/>
        <service id="pipe.httplabs.client.traceable"
                 class="ContinuousPipe\HttpLabs\TraceableClient"
                 decorates="pipe.httplabs.client">
            <argument type="service" id="pipe.httplabs.client.traceable.inner" />
        </service>

        <service id="pipe.httplabs.client" alias="pipe.httplabs.client.predictable" />
    </services>
</container>
