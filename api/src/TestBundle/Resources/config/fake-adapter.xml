<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.adapter.fake.repository" class="ContinuousPipe\Pipe\Tests\InMemoryProviderRepository" />
        <service id="pipe.adapter.fake.client" class="ContinuousPipe\Pipe\Tests\FakeEnvironmentClient" />
        <service id="pipe.adapter.fake.client_factory" class="ContinuousPipe\Pipe\Tests\FakeClientFactory">
            <argument type="service" id="pipe.adapter.fake.client" />
        </service>
        <service id="pipe.adapter.fake" class="ContinuousPipe\Pipe\Tests\FakeAdapter">
            <argument type="service" id="pipe.adapter.fake.repository" />
            <argument type="service" id="pipe.adapter.fake.client_factory" />

            <tag name="pipe.adapter" />
        </service>
    </services>
</container>
