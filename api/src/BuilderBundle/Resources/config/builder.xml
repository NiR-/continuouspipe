<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.archive_reader" class="ContinuousPipe\Builder\Archive\Reader\DownloaderArchiveReader" />
        <service id="builder.archive_manipulator_factory" class="ContinuousPipe\Builder\Archive\Manipulator\ArchiveManipulatorFactory">
            <argument type="service" id="builder.archive_reader" />
        </service>
        <service id="builder.docker_file_resolver" class="ContinuousPipe\Builder\Docker\DockerfileResolver" />
        <service id="builder.dockerfile_command_extractor" class="ContinuousPipe\Builder\IsolatedCommands\DockerfileCommandExtractor">
            <argument type="service" id="builder.archive_reader" />
            <argument type="service" id="builder.docker_file_resolver" />
            <argument type="service" id="builder.archive_manipulator_factory" />
        </service>
        <service id="builder.command_extractor" class="ContinuousPipe\Builder\IsolatedCommands\ContextualizedCommandsWithEnvironment">
            <argument type="service" id="builder.dockerfile_command_extractor" />
        </service>

        <service id="builder.archive.http_archive_builder.http_client.handler"
                 class="GuzzleHttp\HandlerStack">
            <factory class="GuzzleHttp\HandlerStack" method="create" />
        </service>

        <service id="builder.archive.http_archive_builder.http_client" class="GuzzleHttp\Client">
            <argument type="collection">
                <argument key="handler" type="service" id="builder.archive.http_archive_builder.http_client.handler" />
            </argument>

            <tag name="csa_guzzle.client" />
        </service>

        <service id="builder.archive.http_archive_packer" class="ContinuousPipe\Builder\Archive\HttpArchivePacker">
            <argument type="service" id="builder.archive.http_archive_builder.http_client" />
        </service>

        <service id="builder.archive.http_archive_builder" class="ContinuousPipe\Builder\Archive\HttpArchiveBuilder">
            <argument type="service" id="builder.archive.http_archive_packer" />
        </service>

        <service id="builder.archive_builder" class="ContinuousPipe\Builder\Archive\Builder\AdaptativeArchiveBuilder">
            <argument type="collection">
                <argument type="service" id="builder.archive.http_archive_builder" />
            </argument>
        </service>

        <service id="builder.archive_builder.github_repository_compatibility"
                 class="ContinuousPipe\Builder\GitHub\Archive\ReplaceTheGitHubRepositoryByAnArchiveDecorator"
                 decorates="builder.archive_builder"
                 decoration-priority="5">
            <argument type="service" id="builder.archive_builder.github_repository_compatibility.inner" />
        </service>

        <service id="builder.archive_builder.inject_github_token"
                 class="ContinuousPipe\Builder\GitHub\Archive\InjectGitHubTokenBuilderDecorator"
                 decorates="builder.archive_builder"
                 decoration-priority="4">
            <argument type="service" id="builder.archive_builder.inject_github_token.inner" />
            <argument type="service" id="authenticator.bucket_repository" />
        </service>

        <service id="builder.builder" class="ContinuousPipe\Builder\Docker\DockerBuilder">
            <argument type="service" id="builder.archive_builder" />
            <argument type="service" id="builder.docker.client" />
            <argument type="service" id="builder.docker.authenticator_credentials_repository" />
            <argument type="service" id="builder.command_extractor" />
            <argument type="service" id="log_stream.logger_factory" />
        </service>

        <service id="builder.build_repository" class="ContinuousPipe\Builder\Infrastructure\Doctrine\DoctrineBuildRepository">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
