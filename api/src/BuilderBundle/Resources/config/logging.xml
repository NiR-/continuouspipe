<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="log_stream.operation_runner" class="FaultTolerance\OperationRunner\RetryOperationRunner">
            <factory class="ContinuousPipe\Builder\Logging\LogStream\OperationRunnerFactory" method="create" />
        </service>

        <service id="builder.docker.logged_client"
                 class="ContinuousPipe\Builder\Logging\Docker\LoggedDockerClient"
                 decorates="builder.docker.client">
            <argument type="service" id="builder.docker.logged_client.inner" />
            <argument type="service" id="log_stream.logger_factory" />
        </service>

        <service id="builder.logged_builder"
                 class="ContinuousPipe\Builder\Logging\Docker\LoggedDockerBuilder"
                 decorates="builder.builder">
            <argument type="service" id="builder.logged_builder.inner" />
        </service>
    </services>
</container>
