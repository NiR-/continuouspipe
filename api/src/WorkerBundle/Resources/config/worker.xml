<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.builder_handler" class="ContinuousPipe\Builder\Handler\BuildHandler">
            <argument type="service" id="builder.docker_builder"/>

            <tag name="asynchronous_command_handler" handles="ContinuousPipe\Builder\Command\BuildCommand"/>
        </service>
    </services>
</container>
