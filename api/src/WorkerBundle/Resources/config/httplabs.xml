<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="pipe.adapter.httplabs.proxy_public_endpoints"
                 class="ContinuousPipe\Adapter\HttpLabs\Handler\ProxyPublicEndpointsHandler">
            <argument type="service" id="event_bus"/>
            <argument type="service" id="pipe.adapter.httplabs.proxyier"/>
            <argument type="service" id="log_stream.logger_factory"/>
            <tag name="command_handler" handles="ContinuousPipe\Pipe\Command\ProxyPublicEndpointsCommand"/>
        </service>

        <service id="pipe.adapter.httplabs.proxyier"
                 class="ContinuousPipe\Adapter\HttpLabs\Endpoint\GuzzleEndpointProxier">
            <argument type="service" id="pipe.adapter.httplabs.client"/>
        </service>

        <service id="pipe.adapter.httplabs.client" class="GuzzleHttp\Client">
            <argument type="collection">
                <argument key="base_url">%httplabs.url%</argument>
                <argument key="defaults" type="collection">
                    <argument key="headers" type="collection">
                        <argument key="Authorization">%httplabs.token%</argument>
                    </argument>
                </argument>
            </argument>
        </service>

    </services>
</container>
