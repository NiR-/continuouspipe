<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.handler.build_image" class="ContinuousPipe\River\Task\Build\Handler\BuildImageHandler">
            <argument type="service" id="builder.client" />
            <argument type="service" id="river.view.tide_repository" />
            <argument type="service" id="simple_bus.event_bus" />
            <argument type="service" id="router" />
            <argument type="service" id="logger" />

            <tag name="asynchronous_command_handler" handles="ContinuousPipe\River\Task\Build\Command\BuildImageCommand" />
        </service>
        <service id="river.handler.build_images" class="ContinuousPipe\River\Task\Build\Handler\BuildImagesHandler">
            <argument type="service" id="simple_bus.command_bus" />
            <argument type="service" id="simple_bus.event_bus" />
            <argument type="service" id="river.view.tide_repository" />
            <argument type="service" id="builder.build_request_creator" />
            <argument type="service" id="log_stream.logger_factory" />
            <argument type="service" id="logger" />

            <tag name="asynchronous_command_handler" handles="ContinuousPipe\River\Task\Build\Command\BuildImagesCommand" />
        </service>
    </services>
</container>
