<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.messages.simple_bus.dispatch_messages_to_event_consumer" class="ContinuousPipe\Message\SimpleBus\DispatchMessagesToEventBusConsumer">
            <argument type="service" id="event_bus" />
        </service>
        <service id="builder.messages.rabbit_mq.consumer" class="ContinuousPipe\Message\RabbitMq\RabbitMqConsumerToMessageConsumer">
            <argument type="service" id="builder.messages.simple_bus.dispatch_messages_to_event_consumer" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="logger" />
        </service>

        <service id="builder.billing.activity_tracker.doctrine" class="ContinuousPipe\Billing\Infrastructure\Doctrine\DoctrineActivityTracker">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="app.billing.activity_tracker" alias="builder.billing.activity_tracker.doctrine" />
        <service id="builder.billing.activity_tracker.store_user_activity" class="ContinuousPipe\Billing\ActivityTracker\EventListener\StoreLastUserActivity">
            <argument type="service" id="app.billing.activity_tracker" />

            <tag name="event_subscriber" subscribes_to="ContinuousPipe\Message\UserActivity" />
        </service>
        <service id="app.billing.trial_resolver" class="ContinuousPipe\Billing\BillingProfile\Trial\CreationDateTrialResolver" />

        <!-- Billing profile -->
        <service id="app.billing.when_user_is_created.create_billing_profile" class="ContinuousPipe\Billing\BillingProfile\WhenUserIsCreated\CreateABillingProfile">
            <argument type="service" id="app.repository.billing_profile" />

            <tag name="kernel.event_listener" event="security.user_created" method="notify" />
        </service>

        <!-- Usage -->
        <service id="app.billing.usage_tracker" class="ContinuousPipe\Billing\Usage\FromActivityUsageTracker">
            <argument type="service" id="app.billing.activity_tracker" />
            <argument type="service" id="app.repository.billing_profile" />
        </service>

        <!-- Plans -->
        <service id="app.billing.plan_repository" class="ContinuousPipe\Billing\Plan\Repository\JsonRepresentedPlanRepository">
            <argument type="service" id="jms_serializer" />
            <argument>%billing_plans%</argument>
            <argument>%billing_addons%</argument>
        </service>

        <service id="app.billing.plan_manager" class="ContinuousPipe\Billing\Plan\Recurly\RecurlyPlanManager">
            <argument type="service" id="app.billing.plan_repository"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="router"/>
            <argument>%recurly_subdomain%</argument>
            <argument>%recurly_api_key%</argument>
        </service>

        <service id="app.billing.add_invoices_to_serialized" class="ContinuousPipe\Billing\Plan\Recurly\AddRecurlysInvoicesUrlToSerializedBillingProfiles">
            <argument type="service" id="app.billing.plan_manager" />

            <tag name="jms_serializer.event_subscriber" />
        </service>
    </services>
</container>
