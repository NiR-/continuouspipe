<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.messages.simple_bus.dispatch_messages_to_event_consumer" class="ContinuousPipe\Message\SimpleBus\DispatchMessagesToEventBusConsumer">
            <argument type="service" id="event_bus" />
        </service>
        <service id="builder.messages.rabbit_mq.consumer" class="ContinuousPipe\Message\RabbitMq\RabbitMqConsumerToMessageConsumer">
            <argument type="service" id="builder.messages.simple_bus.dispatch_messages_to_event_consumer" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="logger" />
        </service>

        <service id="builder.billing.activity_tracker.redis" class="ContinuousPipe\Billing\Infrastructure\Redis\RedisActivityTracker">
            <argument type="service" id="snc_redis.default_client" />
            <argument type="service" id="jms_serializer.serializer" />
            <argument type="service" id="logger"/>
        </service>
        <service id="app.billing.activity_tracker" alias="builder.billing.activity_tracker.redis" />
        <service id="builder.billing.activity_tracker.store_user_activity" class="ContinuousPipe\Billing\ActivityTracker\EventListener\StoreLastUserActivity">
            <argument type="service" id="app.billing.activity_tracker" />

            <tag name="event_subscriber" subscribes_to="ContinuousPipe\Message\UserActivity" />
        </service>

        <!-- Subscription -->
        <service id="builder.billing.subscription_client" class="ContinuousPipe\Billing\Subscription\Recurly\RecurlySubscriptionClient">
            <argument>%recurly_subdomain%</argument>
            <argument>%recurly_api_key%</argument>
        </service>
    </services>
</container>
