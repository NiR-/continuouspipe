<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.docker_compose.parser.yaml" class="ContinuousPipe\DockerCompose\Parser\YamlParser" />
        <service id="river.docker_compose.parser.file" class="ContinuousPipe\DockerCompose\Parser\FileParser">
            <argument type="service" id="river.docker_compose.parser.yaml" />
        </service>

        <service id="river.docker_compose.parser.project" class="ContinuousPipe\DockerCompose\Parser\ProjectParser">
            <argument type="service" id="river.docker_compose.parser.file" />
        </service>

        <service id="river.github.file_system_resolver" class="ContinuousPipe\River\CodeRepository\GitHub\GitHubFileSystemResolver">
            <argument type="service" id="repository_river.github.client_factory" />
            <argument type="service" id="river.github.repository_address_descriptor" />
        </service>
        <service id="river.file_system_resolver" alias="river.github.file_system_resolver" />
    </services>
</container>
