<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Resources -->
        <service id="river.managed.resources.usage_resolver" class="ContinuousPipe\River\Managed\Resources\CurrentResourcesFromEnvironments">
            <argument type="service" id="river.flow.environment_client" />
        </service>

        <!-- Resources history -->
        <service id="river.managed.resources.history_repository" class="ContinuousPipe\River\Infrastructure\Doctrine\Repository\ManagedResources\DoctrineResourceUsageHistoryRepository">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
    </services>
</container>
