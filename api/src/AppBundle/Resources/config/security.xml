<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.security.voter.flow" class="AppBundle\Security\Voter\FlowSecurityVoter" public="false">
            <argument type="service" id="authenticator.team_membership_finder"/>

            <tag name="security.voter" />
        </service>

        <service id="river.security.voter.ghost" class="ContinuousPipe\Security\Voter\GhostUserPermissionVoter"  public="false">
            <tag name="security.voter" />
        </service>

        <service id="river.security.voter.team" class="ContinuousPipe\Security\Voter\TeamVoter"  public="false">
            <tag name="security.voter" />
        </service>

        <service id="river.security.voter.account" class="ContinuousPipe\Security\Voter\AccountPermissionVoter"  public="false">
            <argument type="service" id="authenticator.account_repository" />

            <tag name="security.voter" />
        </service>

        <!-- Encryption Vault -->
        <service id="river.flow.encrypted_variable_vault" class="ContinuousPipe\River\Flow\EncryptedVariable\GoogleKms\GoogleKmsEncryptedVariableVault">
            <argument>%google_kms_project_id%</argument>
            <argument>%google_kms_location%</argument>
            <argument>%google_kms_key_ring%</argument>
            <argument>%google_kms_service_account_path%</argument>
        </service>
    </services>
</container>
