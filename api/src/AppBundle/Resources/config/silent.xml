<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.silent.code_status_updater"
                 class="ContinuousPipe\River\Silent\CodeRepository\SilentCodeStatusUpdater"
                 decorates="river.code_status_updater">
            <argument type="service" id="river.silent.code_status_updater.inner" />
        </service>

        <service id="river.silent.github.pull_request_deployment_notifier"
                 class="ContinuousPipe\River\Silent\CodeRepository\SilentDeploymentNotifier"
                 decorates="river.github.pull_request_deployment_notifier">
            <argument type="service" id="river.silent.github.pull_request_deployment_notifier.inner" />
            <argument type="service" id="river.view.tide_repository" />
        </service>
    </services>
</container>
