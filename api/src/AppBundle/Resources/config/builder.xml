<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="docker.client" class="Docker\Http\DockerClient">
            <argument type="collection"/>
            <argument>%docker_entrypoint%</argument>
            <argument>null</argument>
            <argument>false</argument>
        </service>
        <service id="docker" class="Docker\Docker">
            <argument type="service" id="docker.client"/>
        </service>

        <service id="builder.docker.client" class="Builder\Docker\Client">
            <argument type="service" id="docker" />
        </service>
        <service id="builder.github.repository_address_descriptor" class="Builder\GitHub\RepositoryAddressDescriptor" />
        <service id="builder.github.archive_builder" class="Builder\GitHubArchiveBuilder">
            <argument type="service" id="builder.github.repository_address_descriptor" />
        </service>
        <service id="builder.docker_builder" class="Builder\DockerBuilder">
            <argument type="service" id="builder.github.archive_builder" />
            <argument type="service" id="builder.docker.client" />
        </service>
        <service id="app.controller.build" class="AppBundle\Controller\BuildController">
            <argument type="service" id="builder.docker_builder" />
        </service>
    </services>
</container>
