<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.http_client" class="GuzzleHttp\Client">
            <tag name="csa_guzzle.client" />
        </service>

        <service id="builder.client" class="ContinuousPipe\Builder\Client\BuilderClient">
            <argument type="service" id="builder.http_client" />
            <argument type="service" id="jms_serializer" />
            <argument>%builder_base_url%</argument>
        </service>
    </services>
</container>
