<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="builder.http_client" class="GuzzleHttp\Client">
            <tag name="csa_guzzle.client" />
        </service>

        <service id="builder.client" class="ContinuousPipe\Builder\Client\HttpBuilderClient">
            <argument type="service" id="builder.http_client" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="lexik_jwt_authentication.jwt_manager" />
            <argument>%builder_base_url%</argument>

            <tag name="tolerance.operation_wrapper"
                 methods="build"
                 runner="tolerance.operation_runners.builder" />
        </service>

        <service id="builder.build_request_source_resolver" class="ContinuousPipe\River\CodeRepository\ImplementationDelegation\DelegatesToBuildRequestSourceResolverAdapater">
            <argument type="collection">
                <argument type="service" id="river.code_repository.github.build_request_source_resolver" />
                <argument type="service" id="river.code_repository.bitbucket.build_request_source_resolver" />
            </argument>
        </service>

        <service id="builder.build_request_creator" class="ContinuousPipe\Builder\BuildRequestCreator">
            <argument type="service" id="logger" />
            <argument type="service" id="builder.build_request_source_resolver" />
        </service>
    </services>
</container>
