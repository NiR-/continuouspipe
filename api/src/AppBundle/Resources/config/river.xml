<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Command handlers -->
        <service id="river.handler.start_tide" class="ContinuousPipe\River\Handler\StartTideHandler">
            <argument type="service" id="simple_bus.event_bus" />
            <argument type="service" id="river.repository.tide" />
            <argument type="service" id="log_stream.logger_factory" />

            <tag name="asynchronous_command_handler" handles="ContinuousPipe\River\Command\StartTideCommand" />
        </service>

        <!-- Event subscribers -->
        <service id="river.listener.tide_created" class="ContinuousPipe\River\EventListener\TideCreatedListener">
            <argument type="service" id="simple_bus.command_bus" />

            <tag name="event_subscriber" subscribes_to="ContinuousPipe\River\Event\TideCreated"/>
        </service>
    </services>
</container>
