<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="repository_river.github.request.github_request_param_converter" class="GitHub\WebHook\Request\ParamConverter\GitHubRequestConverter">
            <argument type="service" id="repository_river.github.request_validator" />
            <argument type="service" id="repository_river.github.request_deserializer" />
            <tag name="request.param_converter" converter="githubRequest" />
        </service>

        <service id="repository_river.github.request_validator" class="GitHub\WebHook\Security\RequestValidator">
            <argument>%github_secret%</argument>
        </service>

        <service id="repository_river.github.default_class_event_mapping" class="GitHub\WebHook\DefaultEventClassMapping" />

        <service id="repository_river.github.request_deserializer" class="GitHub\WebHook\RequestDeserializer">
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="repository_river.github.default_class_event_mapping" />
        </service>

        <service id="repository_river.github.client_factory" class="AppBundle\GitHub\GitHubClientFactory">
            <argument type="service" id="security.token_storage" />
        </service>
        <service id="repository_river.user_repository_repository" class="AppBundle\GitHub\GitHubUserRepositoryRepository">
            <argument type="service" id="repository_river.github.client_factory" />
            <argument type="service" id="jms_serializer" />
        </service>
        <service id="app.controller.user_repositories" class="AppBundle\Controller\UserRepositoriesController">
            <argument type="service" id="repository_river.user_repository_repository" />
            <argument type="service" id="jms_serializer" />
        </service>
        <service id="app.controller.setup_repository" class="AppBundle\Controller\SetupRepositoryController">
            <argument type="service" id="repository_river.github.webhook_manager" />
            <argument type="service" id="repository_river.user_repository_repository" />
        </service>

        <service id="repository_river.github.client" class="GitHub\Client">
            <factory service="repository_river.github.client_factory" method="createClientForCurrentUser" />
        </service>
        <service id="repository_river.github.webhook_manager" class="GitHub\WebHook\Setup\WebHookManager">
            <argument type="service" id="repository_river.github.client" />
            <argument type="service" id="jms_serializer" />
            <argument>%repository_river_base_url%</argument>
            <argument>%github_secret%</argument>
        </service>
    </services>
</container>
