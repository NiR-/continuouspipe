<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.repository.security_user" class="ContinuousPipe\Authenticator\Infrastructure\Doctrine\DoctrineSecurityUserRepository">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="app.repository.docker_registry_credentials" class="ContinuousPipe\Authenticator\Infrastructure\Doctrine\DoctrineDockerRegistryCredentialsRepository">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="app.security.user_provider" class="ContinuousPipe\Authenticator\Security\Authentication\UserProvider">
            <argument type="service" id="app.repository.security_user" />
            <argument type="service" id="app.user_details.github" />
        </service>
        <service id="app.security.authentication_provider" class="ContinuousPipe\Authenticator\Security\AuthenticationProvider">
            <argument type="service" id="router" />
            <argument type="service" id="lexik_jwt_authentication.jwt_manager" />
            <argument type="service" id="security.token_storage" />
        </service>

        <service id="request.param_converter.security_user" class="ContinuousPipe\Authenticator\Infrastructure\Request\ParamConverter\UserParamConverter">
            <argument type="service" id="app.repository.security_user" />
            <argument type="service" id="security.token_storage" />

            <tag name="request.param_converter" converter="user" />
        </service>

        <service id="app.controller.authenticate" class="AppBundle\Controller\AuthenticateController">
            <argument type="service" id="app.security.authentication_provider" />
        </service>
        <service id="app.controller.logged_in" class="AppBundle\Controller\LoggedInController">
            <argument type="service" id="app.security.authentication_provider" />
        </service>
        <service id="app.controller.account" class="AppBundle\Controller\AccountController">
            <argument type="service" id="app.repository.docker_registry_credentials" />
        </service>
        <service id="app.controller.docker_registry_credentials" class="AppBundle\Controller\DockerRegistryCredentialsController">
            <argument type="service" id="app.repository.docker_registry_credentials" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>
        <service id="guzzle.client" class="GuzzleHttp\Client">
        </service>
        <service id="app.user_details.github" class="ContinuousPipe\UserDetails\GitHubUserDetails">
            <argument type="service" id="guzzle.client" />
        </service>
    </services>
</container>
