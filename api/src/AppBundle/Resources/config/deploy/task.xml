<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.task.deploy_factory" class="ContinuousPipe\River\Task\Deploy\DeployTaskFactory">
            <argument type="service" id="command_bus" />
            <argument type="service" id="log_stream.logger_factory" />
            <argument type="service" id="river.task.deploy.configuration.component_factory" />

            <tag name="river.task_factory" task="deploy" />
        </service>

        <service id="river.pipe_client.guzzle_client" class="GuzzleHttp\Client">
            <tag name="csa_guzzle.client" />
        </service>
        <service id="river.pipe_client" class="ContinuousPipe\Pipe\HttpPipeClient">
            <argument type="service" id="river.pipe_client.guzzle_client" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="lexik_jwt_authentication.jwt_manager" />
            <argument>%pipe_base_url%</argument>
        </service>
        <service id="river.pipe.cluster_identifier_resolver" class="ContinuousPipe\River\Pipe\ClusterIdentifierResolver" />

        <service id="river.task.deploy.naming.flow_and_branch_strategy" class="ContinuousPipe\River\Task\Deploy\Naming\FlowUuidAndBranchNameStrategy" />
        <service id="river.task.deploy.naming.environment_strategy" class="ContinuousPipe\River\Task\Deploy\Naming\LimitedLengthNamingStrategy">
            <argument type="service" id="river.task.deploy.naming.flow_and_branch_strategy" />
        </service>

        <service id="river.task.deploy.deployment_request_factory" class="ContinuousPipe\River\Task\Deploy\DeploymentRequest\FlattenDeploymentRequestFactory">
            <argument type="service" id="router" />
            <argument type="service" id="river.task.deploy.naming.environment_strategy" />
        </service>
        <service id="river.handler.start_deploy" class="ContinuousPipe\River\Task\Deploy\Handler\StartDeploymentHandler">
            <argument type="service" id="river.task.deploy.deployment_request_factory" />
            <argument type="service" id="river.pipe_client" />
            <argument type="service" id="simple_bus.event_bus" />
            <argument type="service" id="log_stream.logger_factory" />

            <tag name="asynchronous_command_handler" handles="ContinuousPipe\River\Task\Deploy\Command\StartDeploymentCommand" />
        </service>

        <service id="river.task.deploy.configuration.component_factory" class="ContinuousPipe\River\Task\Deploy\Configuration\ComponentFactory">
            <argument type="service" id="jms_serializer" />
        </service>

        <service id="river.task.deploy.serializer.context_handler" class="ContinuousPipe\River\Task\Deploy\Serializer\DeployContextSerializerHandler">
            <tag name="jms_serializer.subscribing_handler" />
        </service>
    </services>
</container>
