<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="logstream.guzzle_client" class="GuzzleHttp\Client">
            <tag name="csa_guzzle.client" />
        </service>

        <service id="logstream.http.normalizer" class="LogStream\Client\Http\LogNormalizer" />

        <service id="logstream.http_client" class="LogStream\Client\HttpClient">
            <argument type="service" id="logstream.guzzle_client" />
            <argument type="service" id="logstream.http.normalizer" />
            <argument>%logstream_url%</argument>
        </service>

        <service id="logstream.logger_factory" class="LogStream\LoggerFactory">
            <argument type="service" id="logstream.http_client" />
        </service>
    </services>
</container>
