<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.controller.account" class="AppBundle\Controller\AccountController">
            <argument type="service" id="app.repository.account"/>
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.api_keys" class="AppBundle\Controller\ApiKeysController">
            <argument type="service" id="api.security.api_key.user_by_api_key_repository" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.invitation" class="AppBundle\Controller\InvitationController">
            <argument type="service" id="app.repository.user_invitation" />
            <argument type="service" id="app.invitation.invitation_to_team_membership_transformer" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.billing_redirection" class="AppBundle\Controller\BillingRedirectionController">
            <argument type="service" id="app.repository.billing_profile" />
            <argument type="service" id="app.billing.plan_manager" />
        </service>
    </services>
</container>
