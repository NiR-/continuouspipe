<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.controller.invitation" class="AppBundle\Controller\InvitationController">
            <argument type="service" id="app.repository.user_invitation" />
            <argument type="service" id="app.invitation.invitation_to_team_membership_transformer" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.billing_redirection" class="AppBundle\Controller\BillingRedirectionController">
            <argument type="service" id="app.repository.billing_profile" />
            <argument type="service" id="app.billing.plan_manager" />
        </service>

        <service id="app.controller.audit_log" class="AppBundle\Controller\AuditLogController">
            <argument type="service" id="authenticator.audit_log.storage.log_repository" />
        </service>
    </services>
</container>
