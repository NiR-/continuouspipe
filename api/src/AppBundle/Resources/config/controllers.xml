<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.controller.account" class="AppBundle\Controller\AccountController">
            <argument type="service" id="app.repository.account"/>
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.api_keys" class="AppBundle\Controller\ApiKeysController">
            <argument type="service" id="api.security.api_key.user_by_api_key_repository" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.billing_profile" class="AppBundle\Controller\BillingProfileController">
            <argument type="service" id="app.repository.billing_profile" />
            <argument type="service" id="builder.billing.subscription_client" />
            <argument type="service" id="app.billing.trial_resolver" />
            <argument type="service" id="app.billing.activity_tracker" />
            <argument type="service" id="router" />
            <argument type="service" id="app.billing.usage_tracker" />
            <argument type="service" id="app.repository.team_membership" />
            <argument type="service" id="logger" />
            <argument type="service" id="app.user_billing_profile_creator" />
            <argument>%recurly_subdomain%</argument>
        </service>

        <service id="app.controller.invitation" class="AppBundle\Controller\InvitationController">
            <argument type="service" id="app.repository.user_invitation" />
            <argument type="service" id="app.invitation.invitation_to_team_membership_transformer" />
            <argument type="service" id="app.authenticator.bypass_white_list_toggle_factory" />
            <argument type="service" id="router" />
        </service>

        <service id="app.controller.early_access" class="AppBundle\Controller\EarlyAccessController">
            <argument type="service" id="app.repository.early_access_code" />
            <argument type="service" id="app.authenticator.bypass_white_list_toggle_factory" />
            <argument type="service" id="router" />
            <argument type="service" id="form.factory" />
        </service>

        <service id="app.controller.billing_redirection" class="AppBundle\Controller\BillingRedirectionController">
            <argument type="service" id="app.repository.billing_profile" />
            <argument type="service" id="app.billing.plan_manager" />
        </service>
    </services>
</container>
