<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.controller.build" class="AppBundle\Controller\BuildController">
            <argument type="service" id="tactician.commandbus" />
            <argument type="service" id="builder.build_repository" />
        </service>

        <service id="app.controller.build_logs" class="AppBundle\Controller\BuildLogsController">
            <argument type="service" id="builder.logging.log_aggregator" />
        </service>

        <service id="builder.request.build_request_param_converter" class="AppBundle\Request\ParamConverter\BuildRequestParamConverter">
            <argument type="service" id="jms_serializer" />
            <tag name="request.param_converter" priority="0" converter="build_request" />
        </service>
    </services>
</container>
