<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.controllers.create_provider" class="AppBundle\Controller\CreateProviderController">
            <argument type="service" id="pipe.adapter_registry" />
            <argument type="service" id="jms_serializer" />
        </service>

        <service id="pipe.controllers.get_provider" class="AppBundle\Controller\GetProviderController">
            <argument type="service" id="pipe.provider_repository" />
        </service>

        <service id="pipe.controllers.delete_provider" class="AppBundle\Controller\DeleteProviderController">
            <argument type="service" id="pipe.provider_repository" />
        </service>

        <service id="pipe.controllers.environment" class="AppBundle\Controller\EnvironmentController">
            <argument type="service" id="pipe.provider_repository" />
            <argument type="service" id="pipe.chain_environment_client_factory" />
        </service>

        <service id="pipe.controllers.deployment" class="AppBundle\Controller\DeploymentController">
            <argument type="service" id="validator" />
            <argument type="service" id="pipe.view.deployment_repository" />
            <argument type="service" id="security.user_context" />
            <argument type="service" id="command_bus" />
        </service>
    </services>
</container>
