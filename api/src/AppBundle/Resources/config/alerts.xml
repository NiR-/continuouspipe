<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.alerts.on_runtime.github.flow_installation_not_found" class="ContinuousPipe\River\Alerts\OnRuntime\GitHub\FlowInstallationNotFound">
            <argument type="service" id="github.integration.installation_repository" />
            <argument type="service" id="river.github.client_factory" />
        </service>

        <service id="river.alerts.repository" alias="river.alerts.on_runtime.github.flow_installation_not_found" />
    </services>
</container>
