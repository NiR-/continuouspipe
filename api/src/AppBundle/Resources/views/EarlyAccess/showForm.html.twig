{% extends "::layout.html.twig" %}
{% form_theme form 'FrameworkBundle:Form:form_errors.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    filter="scssphp"
    filter="cssrewrite"

    "bundles/app/scss/early_access.scss"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block content %}
    <div class="early-access-container">
        <div class="early-access-title">
            <div class="container">
                <h1>Early Access</h1>
            </div>
        </div>
        <div class="early-access-content container">
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <p>Enter your early access code to be able to login to ContinuousPipe.</p>
                </div>
            </div>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(form.code, null, {'label_attr': {'class': 'col-md-2 control-label'} }) }}
                <div class="col-md-10">
                    {{ form_errors(form.code) }}
                    {{ form_widget(form.code, {'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">Enter</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}