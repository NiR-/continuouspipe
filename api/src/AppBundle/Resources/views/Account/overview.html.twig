{% extends "AppBundle:Account:layout.html.twig" %}
{% block account_title %}
<h1>My Account</h1>
{% endblock %}
{% block account_content %}
<h2>Personal information</h2>
<form class="form-horizontal">
    <div class="form-group">
        <label for="inputUsername" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputUsername" value="{{ user.username }}" placeholder="Username" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail" value="{{ user.email }}" placeholder="Email" disabled="disabled">
        </div>
    </div>
</form>
<h2>Connected accounts</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Type</th>
        <th>User</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for account in accounts %}
        <tr>
            <td><i class="cp-icon-{{ account.type }}"></i> {{ account.type }}</td>
            <td>{{ account.username }}</td>
            <td><a href="{{ path('unlink_account', {'accountUuid': account.uuid}) }}" class="btn btn-danger btn-sm">Unlink</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">No connected accounts.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a href="{{ hwi_oauth_login_url('github') }}" class="btn btn-default"><i class="cp-icon-github"></i> Connect a GitHub account</a>
    <a href="{{ hwi_oauth_login_url('google') }}" class="btn btn-default"><i class="cp-icon-google"></i>Connect a Google account</a>
    <a href="{{ hwi_oauth_login_url('bitbucket') }}" class="btn btn-default"><i class="cp-icon-bitbucket"></i>Connect a BitBucket account</a>
</p>

<h2>Billing profile</h2>
{% if billingProfile is null %}
    <div class="alert alert-warning">Your billing profile is not configured. <a href="{{ path('account_billing_profile') }}" class="btn btn-primary">Configure</a></div>
{% else %}
    <div class="alert alert-info">
        <a href="{{ path('account_billing_profile') }}" class="btn btn-primary pull-right">Configure</a>
        <p>Your billing profile is properly set-up.</p>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Linked teams</h3>
                </div>
                <!-- List group -->
                <ul class="list-group">
                    {% for team in billingProfile.teams %}
                        <li class="list-group-item">{{ team.name }}</li>
                    {% else %}
                        <li class="list-group-item"><em>No linked team.</em></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Last activity per user per day in the last 30 days</h3>
                </div>

                <!-- List group -->
                <ul class="list-group">
                    {% for activity in userActivities %}
                        <li class="list-group-item"><strong>{{ activity.user.username }}</strong> did <strong>{{ activity.type }}</strong> on {{ activity.dateTime | date('d/m/Y H:i:s') }} ({{ activity.teamSlug }}</li>
                    {% else %}
                        <li class="list-group-item"><em>No activity related to your billing profile.</em></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
