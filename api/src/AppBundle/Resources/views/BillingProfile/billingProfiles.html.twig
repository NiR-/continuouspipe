{% extends "AppBundle:Account:layout.html.twig" %}
{% block nav_billing_profile_class %} class="active"{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.7.0/css/bootstrap-slider.min.css" />
{% endblock %}
{% block account_content %}
    <h2>Billing profiles</h2>
    <ul>
        {% for billingProfile in billingProfiles %}
            <li><a href="{{ path('account_billing_profile', { 'uuid': billingProfile.uuid}) }}">{{ billingProfile.name }}</a></li>
        {% endfor %}
    </ul>
    <h2>Add billing profile</h2>
    <form method="post">
        <label for="billing-profile-name">Name</label>
        <input type="text" name="name" id="billing-profile-name" />
        <br />
        <input type="submit" value="Save" />
    </form>

{% endblock %}
