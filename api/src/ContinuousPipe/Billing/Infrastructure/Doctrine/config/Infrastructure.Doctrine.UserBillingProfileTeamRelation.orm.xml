<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="ContinuousPipe\Billing\Infrastructure\Doctrine\UserBillingProfileTeamRelation" table="billing_profile_teams">
        <id name="team" association-key="true" />
        <id name="userBillingProfile" association-key="true" />

        <many-to-one field="team" target-entity="ContinuousPipe\Security\Team\Team">
            <join-column name="team_slug" referenced-column-name="slug" />
        </many-to-one>

        <many-to-one field="userBillingProfile" target-entity="ContinuousPipe\Billing\BillingProfile\UserBillingProfile">
            <join-column name="billing_profile_uuid" referenced-column-name="uuid" />
        </many-to-one>
    </entity>

</doctrine-mapping>
