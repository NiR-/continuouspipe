<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="ContinuousPipe\User\SecurityUser">
        <id name="username" type="string" />
        <embedded name="user" class="ContinuousPipe\User\User" />
        <field name="roles" type="array" />
        <field name="salt" type="string" nullable="true" />
        <field name="password" type="string" nullable="true" />
    </entity>

</doctrine-mapping>
