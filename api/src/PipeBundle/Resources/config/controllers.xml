<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pipe.controllers.environment" class="PipeBundle\Controller\EnvironmentController">
            <argument type="service" id="authenticator.bucket_repository" />
            <argument type="service" id="pipe.adapter.kubernetes.environment_client_factory" />
            <argument type="service" id="logger" />
            <argument type="service" id="pipe.adapter.kubernetes.client_factory" />
        </service>

        <service id="pipe.controllers.deployment" class="PipeBundle\Controller\DeploymentController">
            <argument type="service" id="validator" />
            <argument type="service" id="pipe.view.deployment_repository" />
            <argument type="service" id="security.user_context" />
            <argument type="service" id="command_bus" />
        </service>

        <!-- Param Converters -->
        <service id="app.request.param_converter.team" class="ContinuousPipe\Security\Request\ParamConverter\TeamParamConverter">
            <argument type="service" id="authenticator.team_repository" />

            <tag name="request.param_converter" converter="team" />
        </service>
    </services>
</container>
