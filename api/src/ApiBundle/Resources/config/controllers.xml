<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api.controller.get_build" class="ApiBundle\Controller\GetBuildController">
            <argument type="service" id="builder.build_repository" />
        </service>

        <service id="api.controller.create_build" class="ApiBundle\Controller\CreateBuildController">
            <argument type="service" id="command_bus" />
            <argument type="service" id="builder.build_repository" />
        </service>

        <service id="api.controller.build_logs" class="ApiBundle\Controller\BuildLogsController">
            <argument type="service" id="builder.logging.log_aggregator" />
        </service>

        <service id="builder.request.build_request_param_converter" class="ApiBundle\Request\ParamConverter\BuildRequestParamConverter">
            <argument type="service" id="jms_serializer" />
            <tag name="request.param_converter" priority="0" converter="build_request" />
        </service>
    </services>
</container>
