{% extends "AuthBundle::layout.html.twig" %}
{% block html_attributes %} class="login"{% endblock %}
{% block body %}
<div class="login-container">
    <p><i class="icon cp-icon-logo"></i></p>

    <h1>Welcome to ContinuousPipe!</h1>

    <div class="login-inner">
        {% if error %}
        <div class="login-error">
            <div class="alert-danger">{{ error }}</div>
        </div>
        {% endif %}

        <a href="{{ hwi_oauth_login_url('github') }}" class="login-button"><i class="cp-icon-github"></i> Login with GitHub</a>
    </div>
</div>
{% endblock %}
