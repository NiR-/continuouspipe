<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.time_resolver.predictable"
                 class="ContinuousPipe\River\Tests\View\PredictableTimeResolver"
                 decorates="river.time_resolver">
            <argument type="service" id="river.time_resolver.predictable.inner" />
        </service>

        <service id="river.user_activity.in_memory_dispatcher" class="ContinuousPipe\UserActivity\InMemoryDispatcher" />
        <service id="river.user_activity.dispatcher" alias="river.user_activity.in_memory_dispatcher" />
        <service id="river.user_activity.traceable_dispatcher"
                 class="ContinuousPipe\UserActivity\TraceableUserActivityDispatcher"
                 decorates="river.user_activity.dispatcher">
            <argument type="service" id="river.user_activity.traceable_dispatcher.inner" />
        </service>
        <service id="river.user_activity.middleware_supporting_dispatcher"
                 class="ContinuousPipe\UserActivity\MiddlewareSupportingUserActivityDispatcher"
                 decorates="river.user_activity.dispatcher">
            <argument type="service" id="river.user_activity.middleware_supporting_dispatcher.inner" />
        </service>
        <service id="river.managed.resources.history_repository.traced"
                 class="ContinuousPipe\River\Managed\Resources\TracedUsageHistoryRepository"
                 decorates="river.managed.resources.history_repository">
            <argument type="service" id="river.managed.resources.history_repository.traced.inner" />
        </service>
    </services>
</container>
