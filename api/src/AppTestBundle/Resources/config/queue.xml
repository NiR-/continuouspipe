<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.time_resolver.predictable"
                 class="ContinuousPipe\River\Tests\View\PredictableTimeResolver"
                 decorates="river.time_resolver">
            <argument type="service" id="river.time_resolver.predictable.inner" />
        </service>

        <service id="river.queue.delayed_command_bus.in_memory" class="ContinuousPipe\River\Tests\Queue\InMemoryDelayedCommandBus" />
        <service id="river.queue.delayed_command_bus" alias="river.queue.delayed_command_bus.in_memory" />

        <service id="river.queue.delayed_command_bus.traced"
                 class="ContinuousPipe\River\Tests\Queue\TracedDelayedCommandBus"
                 decorates="river.queue.delayed_command_bus">
            <argument type="service" id="river.queue.delayed_command_bus.traced.inner" />
        </service>
    </services>
</container>
