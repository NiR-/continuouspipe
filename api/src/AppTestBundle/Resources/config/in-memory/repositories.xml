<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.repository.flow.deprecated.doctrine" class="ContinuousPipe\River\Tests\Repository\InMemoryFlowRepository" />

        <service id="river.view.tide_repository" class="ContinuousPipe\River\Tests\View\InMemoryTideRepository" />
        <service id="river.tide.filter.filter_hash_repository" class="ContinuousPipe\River\Tests\Repository\InMemoryFilterHashRepository" />
        <service id="river.flow.projections.flat_flow_repository.doctrine" class="ContinuousPipe\River\Flow\Projections\InMemoryFlatFlowRepository" />
        <service id="river.view.storage.firebase.database_factory" class="ContinuousPipe\River\Infrastructure\Firebase\InMemoryDatabaseFactory">
            <argument type="service" id="csa_guzzle.middleware.history" />
        </service>
        <service id="river.pipeline.view.storage" class="ContinuousPipe\River\Infrastructure\Firebase\Pipeline\View\Storage\InMemoryPipelineViewStorage" />
        <service id="river.branch.view.storage" class="ContinuousPipe\River\Infrastructure\Firebase\Branch\View\Storage\FirebaseBranchViewStorage">
            <argument type="service" id="river.view.storage.firebase_client" />
            <argument>%firebase_database_uri%</argument>
            <argument type="service" id="logger" />
            <argument type="service" id="river.code_repository.pinned_branches_query" />
            <argument type="service" id="jms_serializer" />
        </service>
        <service id="river.branch.pull_request.view.storage" class="ContinuousPipe\River\Infrastructure\Firebase\Branch\View\Storage\InMemoryPullRequestViewStorage"/>
        <service id="development_environment.read_model.repository" class="ContinuousPipe\DevelopmentEnvironment\ReadModel\InMemoryEnvironmentRepository" />

        <service id="river.code_repository.branch_query" class="ContinuousPipe\River\CodeRepository\InMemoryBranchQuery" />
        <service id="river.code_repository.branch_with_tides_query" class="ContinuousPipe\River\CodeRepository\InMemoryBranchWithTidesQuery">
            <argument type="service" id="river.code_repository.branch_query"/>
            <argument type="service" id="river.code_repository.tides_for_branch_query"/>
        </service>

        <service id="river.code_repository.pinned_branches_query" class="ContinuousPipe\River\CodeRepository\PinnedBranchQuery">
            <argument type="service" id="river.code_repository.branch_with_tides_query"/>
            <argument type="service" id="river.flow.projections.flat_flow_repository"/>
        </service>

        <service id="river.code_repository.tides_for_branch_query" class="ContinuousPipe\River\CodeRepository\InMemoryTidesForBranchQuery" />

    </services>
</container>
