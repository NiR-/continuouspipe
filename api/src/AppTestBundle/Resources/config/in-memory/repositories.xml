<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="river.repository.flow.deprecated.doctrine" class="ContinuousPipe\River\Tests\Repository\InMemoryFlowRepository" />

        <service id="river.view.tide_repository" class="ContinuousPipe\River\Tests\View\InMemoryTideRepository" />
        <service id="river.tide.filter.filter_hash_repository" class="ContinuousPipe\River\Tests\Repository\InMemoryFilterHashRepository" />
        <service id="river.flow.projections.flat_flow_repository.doctrine" class="ContinuousPipe\River\Flow\Projections\InMemoryFlatFlowRepository" />
        <service id="river.view.storage.firebase.database_factory" class="ContinuousPipe\River\Infrastructure\Firebase\InMemoryDatabaseFactory">
            <argument type="service" id="csa_guzzle.middleware.history" />
        </service>
        <service id="river.pipeline.view.storage" class="ContinuousPipe\River\Infrastructure\Firebase\Pipeline\View\Storage\InMemoryPipelineViewStorage" />

        <service id="development_environment.read_model.repository" class="ContinuousPipe\DevelopmentEnvironment\ReadModel\InMemoryEnvironmentRepository" />

        <service id="river.code_repository.branch_query" class="ContinuousPipe\River\CodeRepository\InMemoryBranchQuery">
                <argument type="service" id="river.code_repository.branch_query.inner"/>
        </service>

        <service id="river.code_repository.branch_query.inner" class="ContinuousPipe\River\CodeRepository\RepositoryBranchQuery">
            <argument type="collection">
                <argument key="ContinuousPipe\River\CodeRepository\GitHub\GitHubCodeRepository" type="service" id="river.code_repository.branch_query.github"/>
                <argument key="ContinuousPipe\River\CodeRepository\BitBucket\BitBucketCodeRepository" type="service" id="river.code_repository.branch_query.bitbucket"/>
            </argument>
        </service>

        <service id="river.code_repository.branch_query.github" class="GitHub\Integration\ApiBranchQuery">
            <argument type="service" id="river.github.guzzle_http_client" />
            <argument type="service" id="github.integration.installation_repository" />
            <argument type="service" id="github.integration.installation_token_resolver" />
            <argument type="service" id="logger" />
        </service>

        <service id="river.code_repository.branch_query.bitbucket" class="ContinuousPipe\River\CodeRepository\BitBucket\ApiBranchQuery">
            <argument type="service" id="river.bitbucket.client_factory"/>
        </service>

    </services>
</container>
