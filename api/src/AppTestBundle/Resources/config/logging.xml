<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="log_stream.event_store.in_memory" class="LogStream\Tests\InMemory\InMemoryLogStore" />
        <service id="log_stream.logger_factory" class="LogStream\Tests\InMemory\InMemoryLoggerFactory">
            <argument type="service" id="log_stream.event_store.in_memory" />
        </service>
        <service id="log_stream.display_logger_factory" class="LogStream\Tests\Debug\DisplayLoggerFactory" decorates="log_stream.logger_factory">
            <argument type="service" id="log_stream.display_logger_factory.inner" />
        </service>
        <service id="river.code_status_updater" class="ContinuousPipe\River\Tests\CodeRepository\Status\FakeCodeStatusUpdater" />
    </services>
</container>
