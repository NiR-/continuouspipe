{
    "name": "continuouspipe/river",
    "type": "project",
    "description": "ContinuousPipe River",
    "autoload": {
        "psr-4": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.9",
        "symfony/symfony": "2.7.*",
        "doctrine/orm": "~2.5",
        "doctrine/dbal": "~2.5",
        "doctrine/doctrine-bundle": "~1.4",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~4.0",
        "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/serializer-bundle": "~1.0",
        "csa/guzzle-bundle": "@stable",
        "friendsofsymfony/rest-bundle": "~1.7",
        "ramsey/uuid": "~2.8",
        "simple-bus/symfony-bridge": "~4.0",
        "nelmio/cors-bundle": "^1.4",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "raven/raven": "^0.12.1",
        "sroze/github-webhook": "*@dev",
        "sroze/log-stream": "*@dev",
        "continuous-pipe/user": "*@dev",
        "continuous-pipe/model": "*@dev",
        "continuous-pipe/security-bundle": "*@dev",
        "continuous-pipe/builder-model": "*@dev",
        "continuous-pipe/docker-compose": "*@dev"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3",
        "phpspec/phpspec": "~2.2",
        "behat/behat": "~3.0",
        "behat/symfony2-extension": "~2.0"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "update-parameters": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": [{
            "file": "app/config/parameters.yml",
            "env-map": {
                "river_public_url": "SERVICE_RIVER_PUBLIC_ENDPOINT",
                "river_ui_url": "SERVICE_RIVERUI_PUBLIC_ENDPOINT",
                "sentry_dsn": "SENTRY_DSN"
            }
        }]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../package/github-webhook"
        },
        {
            "type": "path",
            "url": "../../package/log-stream"
        },
        {
            "type": "path",
            "url": "../../package/continuous-pipe-security-bundle"
        },
        {
            "type": "path",
            "url": "../../package/continuous-pipe-builder-model"
        },
        {
            "type": "path",
            "url": "../../package/continuous-pipe-user"
        },
        {
            "type": "path",
            "url": "../../package/docker-compose"
        },
        {
            "type": "path",
            "url": "../../package/model"
        }
    ]
}
