{
    "name": "continuouspipe/river",
    "type": "project",
    "description": "ContinuousPipe River",
    "autoload": {
        "psr-4": { "": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "": "tests/" }
    },
    "require": {
        "php": ">=5.3.9",
        "symfony/symfony": "~2.8.0",
        "doctrine/orm": "~2.5",
        "doctrine/dbal": "~2.5",
        "doctrine/doctrine-bundle": "~1.4",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~4.0",
        "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/serializer-bundle": "~1.0",
        "csa/guzzle-bundle": "@stable",
        "friendsofsymfony/rest-bundle": "~1.7",
        "simple-bus/symfony-bridge": "^4.1",
        "nelmio/cors-bundle": "^1.4",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "raven/raven": "^0.12.1",
        "sroze/log-stream": "~0.3.1",
        "tolerance/tolerance": "dev-master",
        "continuous-pipe/model": "~2.2.8",
        "continuous-pipe/security": "~2.2.1",
        "simple-bus/rabbitmq-bundle-bridge": "dev-allow-the-producer-interface",
        "simple-bus/jms-serializer-bundle-bridge": "^2.0",
        "knplabs/github-api": "^1.5",
        "symfony/expression-language": "^2.7",
        "cocur/slugify": "^1.4",
        "keen-io/keen-io": "~2.5",
        "knplabs/knp-paginator-bundle": "^2.5",
        "doctrine/doctrine-cache-bundle": "~1.3.0",
        "rhumsaa/uuid": "^2.8",
        "predis/predis": "^1.1",
        "malkusch/lock": "^1.0",
        "ramsey/uuid-doctrine": "^1.2",
        "guzzlehttp/guzzle": "~6.0",
        "beberlei/metrics": "^2.3",
        "jms/aop-bundle": "^1.2",
        "dbellettini/eventstore-client": "^0.8.0",
        "mhujer/jms-serializer-uuid-bundle": "^1.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3",
        "phpspec/phpspec": "~2.2",
        "behat/behat": "~3.0",
        "behat/symfony2-extension": "~2.0",
        "phpunit/phpunit": "^5.6"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "update-parameters": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": [{
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_host": "DATABASE_HOST",
                "database_password": "DATABASE_PASSWORD",
                "database_user": "DATABASE_USER",
                "river_public_url": "RIVER_URL",
                "river_ui_url": "RIVER_UI_URL",
                "sentry_dsn": "SENTRY_DSN",
                "authenticator_url": "AUTHENTICATOR_URL",
                "builder_base_url": "BUILDER_URL",
                "pipe_base_url": "PIPE_URL",
                "logstream_url": "LOGSTREAM_URL",
                "logstream_frontend_url": "LOGSTREAM_FRONTEND_URL",
                "keen_project_id": "KEEN_PROJECT_ID",
                "keen_write_key": "KEEN_WRITE_KEY",
                "redis_host": "REDIS_HOST",
                "k8s_watcher_url": "K8S_WATCHER_URL",
                "zipkin_base_url": "ZIPKIN_BASE_URL",
                "k8s_health_checker_url": "K8S_HEALTH_CHECKER_URL",
                "event_store_host": "EVENT_STORE_HOST"
            }
        }]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/continuouspipe/security"
        },
        {
            "type": "vcs",
            "url": "https://github.com/continuouspipe/model"
        },
        {
            "type": "vcs",
            "url": "https://github.com/sroze/RabbitMQBundleBridge"
        }
    ]
}
